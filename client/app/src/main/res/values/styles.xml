<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarTheme">@style/WiShare.ActionBarTheme</item>
        <item name="actionBarStyle">@style/WiShare.ActionBarStyle</item>
        <item name="colorPrimary">@color/themeGreen</item>
        <item name="colorPrimaryDark">@color/themedark</item>
        <item name="colorAccent">@color/themeGreen</item>
        <item name="android:textColorPrimary">@color/WhiteSmoke</item>
        <item name="colorControlNormal">@color/themedark</item>
    </style>
    <style name="WiShare.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/themedarker</item>
        <item name="colorPrimary">@color/themedark</item>
        <item name="android:actionBarItemBackground">@drawable/rippledark</item>
        <item name="android:textSize">12pt</item>
    </style>
    <style name="WiShare.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@color/themedark</item>
        <item name="subtitleTextStyle">@color/themedark</item>
        <item name="background">@color/themeGreen</item>
    </style>
    <style name="greenCheck">
        <item name="colorAccent">@color/themeGreen</item>
    </style>
    <style name="Shadow" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/themedarkest</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="WiShareTheme" parent="AppTheme" />

    <declare-styleable name="WiEditTextPermHint">
        <attr name="entries" format="reference" />
        <attr name="permHint" format="string"/>
        <attr name="tempHint" format="string"/>
        <attr name="label" format="string"/>
    </declare-styleable>

</resources>
